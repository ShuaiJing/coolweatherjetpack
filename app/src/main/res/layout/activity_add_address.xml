<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context="com.dbwwt.mall.ui.address.AddAddressActivity">
        <include layout="@layout/content_toolbar" android:id="@+id/toolbar_layout"></include>
    <EditText android:layout_width="match_parent"
              android:hint="收货人"
              android:paddingLeft="20dp"
              android:id="@+id/name"
              android:textSize="16sp"
              android:paddingRight="20dp"

              android:background="@color/transparent"
              android:layout_height="50dp"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/text_color_fff9f9f9"></View>
    <EditText android:layout_width="match_parent"
              android:hint="手机号码"
              android:id="@+id/mobile"
              android:textSize="16sp"
              android:paddingRight="20dp"

              android:background="@color/transparent"
              android:paddingLeft="20dp"
              android:layout_height="50dp"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/text_color_fff9f9f9"></View>

    <TextView android:layout_width="match_parent"
              android:hint="所在区域"
              android:id="@+id/area"
              android:textSize="16sp"

              android:drawableRight="@drawable/arrow_down"
              android:gravity="center_vertical"
              android:paddingLeft="20dp"
              android:layout_height="50dp"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/text_color_fff9f9f9"></View>

    <EditText android:layout_width="match_parent"
              android:hint="详细地址：如道路、门牌号、小区、楼号、单元室等等"
              android:id="@+id/areaDetail"
              android:textSize="16sp"
              android:gravity="start"
              android:paddingRight="20dp"
              android:paddingTop="20dp"
              android:background="@color/transparent"
              android:paddingLeft="20dp"
              android:layout_height="100dp"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/text_color_fff9f9f9"></View>
    <FrameLayout android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:layout_width="match_parent"
                  android:hint="设为默认地址"
                  android:textSize="16sp"

                  android:gravity="center_vertical"
                  android:paddingLeft="20dp"
                  android:layout_height="50dp"/>
        <CheckBox android:layout_width="wrap_content"
                  android:layout_gravity="right|center_vertical"
                  android:padding="10dp"
                  android:id="@+id/check"
                  android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
